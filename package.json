{
  "name": "monday-integration-quickstart-app-typescript",
  "version": "1.4.0",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "yarn stop && concurrently \"yarn dev-server\" \"yarn expose\"",
    "dev-server": "ts-node-dev --watch ./.env ./src/**/*.ts",
    "start": "yarn server",
    "server": "ts-node ./src/app.ts",
    "expose": "ngrok http 8302",
    "stop": "kill-port 8302 && kill-port 4049 && kill-port 4040",
    "lint": "eslint 'src/**/*.ts' --ext .ts --config .eslintrc.json",
    "build": "tsc --build tsconfig.json --verbose",
    "production": "node ./dist/app.js",
    "prepare": "husky install",
    "test": "mocha --sort -r ts-node/register src/**/*.test.ts",
    "test:watch": "mocha --watch --sort -r ts-node/register src/**/*.test.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
  },
  "dependencies": {
    "@sentry/node": "^6.7.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "monday-sdk-js": "^0.1.2",
    "sprintf-js": "^1.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/chai": "^4.2.19",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.2.2",
    "@types/monday-sdk-js": "^0.1.1",
    "@types/node": "^15.0.0",
    "@types/sprintf-js": "^1.1.2",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "chai": "^4.3.4",
    "concurrently": "^6.0.0",
    "cross-port-killer": "^1.2.1",
    "debug": "^4.0.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-typescript-lite": "^12.0.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^6.0.0",
    "mocha": "^9.0.1",
    "mock-require": "^3.0.1",
    "ngrok": "^4.0.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.1.0",
    "prettier": "^2.3.1",
    "sinon": "^11.0.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.3.4"
  }
}
